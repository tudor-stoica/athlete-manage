# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Sports
GET     /sports                     controllers.SportsController.index
GET     /sports/create              controllers.SportsController.create
POST    /sports/save                controllers.SportsController.save
GET     /sports/edit/:id            controllers.SportsController.edit(id : Integer)
PUT     /sports/edit                controllers.SportsController.update
DELETE  /sports/delete/:id          controllers.SportsController.destroy(id : Integer)

#Teams
GET     /teams                      controllers.TeamController.index()
GET     /teams/createTeam           controllers.TeamController.createTeam()
DELETE  /teams/removeTeam/:id       controllers.TeamController.removeTeam()
POST    /teams/saveTeam             controllers.TeamController.saveTeam()
PUT     /teams/editTeam/:id         controllers.TeamController.editTeam()
GET     /teams/addStudent           controllers.TeamController.addStudent()
DELETE  /teams/removeStudent/:id    controllers.TeamController.removeStudent()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
